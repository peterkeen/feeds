<h1>Listing feeds</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Name</th>
    <th>Etag</th>
    <th>Last fetched at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @feeds.each do |feed| %>
  <tr>
    <td><%= feed.url %></td>
    <td><%= feed.name %></td>
    <td><%= feed.etag %></td>
    <td><%= feed.last_fetched_at %></td>
    <td><%= link_to 'Show', feed %></td>
    <td><%= link_to 'Edit', edit_feed_path(feed) %></td>
    <td><%= link_to 'Destroy', feed, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<p><%= link_to 'Bookmarklet', "javascript:(function()%7B(function()%7Bvar%20url=encodeURIComponent(window.location);window.location=%22#{add_feeds_url}%22+url;;%7D)();%7D)();" %></p>
